<div id="home">
    <div class="container">
        <div class="row">
            <div class="col-8 offset-2">
                
                <div class="jumbotron" style="background-image: url(https://media.treehugger.com/assets/images/2016/07/green-forest-trees.jpg.860x0_q70_crop-scale.jpg); background-size: 100%;">
                    <div class="tree_banner">
                    </div>
                </div>

               <h2>ADD BIRDS</h2>

                <form class="clearfix mb-4" action="POST">
                    <div class="form-group">
                        <label for="bird-name">Bird Name</label>
                        <input type="text" id="bird-name" class="form-control" aria-describedby="bird-name"
                            placeholder="Enter Bird Name">
                    </div>

                    <div class="form-group">
                        <label for="family-name">Family</label>
                        <input type="text" id="family-name" class="form-control" aria-describedby="example-text"
                            placeholder="Enter Family">
                    </div>

                    <div class="form-group">
                        <label for="voice-name">Voice</label>
                        <input type="text" id="voice-name" class="form-control" aria-describedby="voice-name"
                            placeholder="Enter Voice">
                    </div>

                    <div class="form-group">
                        <label for="habitat-name">Habitat</label>
                        <input type="text" id="habitat-name" class="form-control" aria-describedby="habitat-name"
                            placeholder="Enter Habitat">
                    </div>

                    <div class="form-group">
                        <label for="place-name">Places</label>
                        <input type="text" id="place-name" class="form-control" aria-describedby="place-name"
                            placeholder="Enter Place">
                    </div>

                    <button id="submit" class="btn btn-primary float-right">Submit</button>
                </form>
                <h3>Bird Sightings:</h3>
                <ul id="example-list" class="list-group">
                    {{#each examples}}
                    <li data-id="{{this.id}}" class="list-group-item">
                        <a href="example/{{this.id}}">{{this.text}}</a>
                        <button class="btn btn-danger float-right delete">ï½˜</button>
                    </li>
                    {{/each}}
                </ul>

